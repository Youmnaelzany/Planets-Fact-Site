<style>
  .header-wrapper {
    /* width: min(95%, 90rem); */
    color: var(--clr-White);
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }
  .header-wrapper a {
    text-transform: uppercase;
    letter-spacing: 0.0625rem;
    color: var(--clr-White);
  }
  .logo-home-link {
    font-family: var(--ff-primary);
    font-size: 1.75rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .nav-links {
    font-family: var(--ff-secondary);
    font-size: 0.6875rem;
    font-style: normal;
    font-weight: 700;
    line-height: 1.5625rem; /* 227.273% */
  }
</style>
